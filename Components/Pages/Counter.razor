@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <span style="color: @GetTextColor()">@currentCount</span></p>

<div class="d-flex gap-2">
    <RadzenButton Text="増やす" Click="IncrementCount" class="btn btn-primary"/>
    <RadzenButton Text="減らす" Click="DecrementCount" class="btn btn-dark"/>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private string GetTextColor()
    {
        if (currentCount >= 1 && currentCount <= 5)
        {
            return "red";
        }
        return "black";
    }
}
